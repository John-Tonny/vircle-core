[Unit]
Description=Vircle daemon
After=network.target

[Service]
User=vpub
Group=vpub

Type=forking
PIDFile=/home/vpub/.vpub/vpubd.pid
ExecStart=/home/vpub/Vircle/vpubd -daemon -pid=/home/vpub/.vpub/vpubd.pid \
-conf=/home/vpub/.vpub/vpub.conf -datadir=/home/vpub/.vpub

ExecStop=/home/vpub/Vircle/vpub-cli -conf=/home/vpub/.vpub/vpub.conf stop
ExecStop=/usr/bin/sleep 25

Restart=no
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
